<%= form_tag(search_path, {:method => :get}) do %>
  <div class="field">
    ISBN: <input type="text" class="form-control" id="isbn" name="isbn" value="<%=params[:isbn]%>">
    <button type="submit" class="btn btn-primary">Search</button>
  </div>

<% end %>


<% if @errors.any? %>
  <ul>
    <% @errors.each do |e| %>
      <li> <%=e %> </li>
    <% end %>
  </ul>
<% end %>

<% if @errors.empty? %>
  <p>
    <strong>Title:</strong>
    <%= @book.title %>
  </p>

  <p>
    <strong>Isbn:</strong>
    <%= @book.isbn %>
  </p>

  <p>
    <strong>Publisher:</strong>
    <%= @book.publisher.name %>
  </p>

  <p>
    <strong>Authors:</strong>
    <%= @authors %>
  </p>

  <p>
    <strong>Price:</strong>
    <%= @book.price %>
  </p>

  <p>
    <strong>Year publication:</strong>
    <%= @book.year_publication %>
  </p>

  <p>
    <strong>Image url:</strong>
    <%= @book.image_url %>
  </p>

  <p>
    <strong>Edition:</strong>
    <%= @book.edition %>
  </p>

<% end %>

